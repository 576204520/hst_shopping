<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="16dp">

    <ImageView
        android:id="@+id/fans_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/fans_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/fans_icon"
        android:text="名字"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/fans_keep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/guanzhu"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/fans_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/fans_keep"
        android:background="@mipmap/liaotian"
        android:visibility="gone"
        />
</RelativeLayout>