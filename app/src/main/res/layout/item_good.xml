<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/good_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/price_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/good_pic"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/good_name"
        style="@style/setting_item_configure"
        android:layout_marginStart="10dp"
        android:gravity="left"
        android:minLines="2"
        android:maxLines="2"
        android:text="但是这种简单的方式可能有时候不能满但是这种简单的方式可能有时候不能满足某些比较较真的需求足某些比较较真的需求"
        android:textColor="@color/colorBlack" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/good_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="已售154"
            android:textColor="@color/colorTexthintGrey2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="$454"
            android:textColor="@color/colorTextRed"
            android:textSize="17sp" />
    </RelativeLayout>
</LinearLayout>