<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="14dp">

    <ImageView
        android:id="@+id/collect_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/car_choose" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/collect_img">s

        <TextView
            android:id="@+id/collect_name"
            style="@style/setting_item_configure"
            android:layout_marginStart="0dp"
            android:maxLength="10"
            android:minLines="1"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/collect_price"
            style="@style/setting_item_configure"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:maxEms="30"
            android:maxLength="25"
            android:maxLines="1"
            android:textColor="@color/colorTextRed"
            android:textSize="17sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/collect_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/collect_img"
        android:layout_marginEnd="18dp"
        android:background="@mipmap/lajixiang"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/collect_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/collect_img"
        android:layout_alignParentRight="true"
        android:background="@mipmap/gouwuche" />
</RelativeLayout>