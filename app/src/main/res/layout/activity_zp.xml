<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/zp_title"
        layout="@layout/layout_title" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:paddingRight="10dp"
        android:src="@mipmap/di" />

    <ImageView
        android:id="@+id/id_lucky_turntable"
        android:layout_width="198dp"
        android:layout_height="198dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="150dp"
        android:src="@mipmap/zu" />

    <ImageView
        android:id="@+id/id_start_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="190dp"
        android:src="@mipmap/anniu" />


    <TextView
        android:id="@+id/zp_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_lucky_turntable"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="当前奖池3200元"
        android:textColor="@color/colorButton" />

    <ImageView
        android:id="@+id/zp_guize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/zp_title"
        android:layout_marginBottom="190dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/youxiguize" />
</RelativeLayout>